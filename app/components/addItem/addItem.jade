div.modal.fade.add-item-container
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h5.modal-title Add Honeydoo
      div.modal-body
        div.row
          div.col-md-12
            h5.text-center {{title}}
        form.form-horizontal
          div.row
            div.col-md-6
              div.form-group
                div.col-md-12
                  label.control-label(for="itemTitle") Honeydoo Title
                div.col-md-12
                  input#itemTitle.form-control(type="text", ng-model="title")
            div.col-md-6
              div.form-group
                div.col-md-12
                  label.control-label(for="anotherThing") Another Thing
                div.col-md-12
                  input#anotherThing.form-control(type="text")
          div.row
            div.col-md-6
              div.form-group
                div.col-md-12
                  label.control-label(for="status") Status
                div.col-md-12
                  ol#status.nya-bs-select.form-control(ng-model="itemStatus", title="What's the status?")
                    li(nya-bs-option="option in options")
                      a {{option}}
                        span.glyphicon.glyphicon-ok.check-mark
            div.col-md-6
              div.form-group
                div.col-md-12
                  label.control-label(for="owner") Owner
                div.col-md-12
                  ol#owner.nya-bs-select.form-control(ng-model="itemOwner", title="Who's the owner?")
                    li(nya-bs-option="owner in owners")
                    a {{owner}}
                      span.glyphicon.glyphicon-ok.check-mark
            div.col-md-10.col-md-offset-1
              div.form-group
                label.control-label(for="note") Add Note
                textarea#note.form-control(rows="3")
      div.modal-footer
        button.btn.btn-default(type="button", data-dismiss="modal") Cancel
        button.btn.btn-primary(type="button") Submit