div.modal.fade.add-item-container
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h5.modal-title Add Honeydoo
      div.modal-body
        div.row
          div.col-md-12
            h5.text-center {{title}}
        form.form-horizontal
          div.row
            div.col-md-6
              div.form-group
                div.col-md-12
                  label.control-label(for="itemTitle") Honeydoo Title
                div.col-md-12
                  input#itemTitle.form-control(type="text", ng-model="title")
            div.col-md-6
              div.form-group
                div.col-md-12
                  label.control-label(for="anotherThing") Another Thing
                div.col-md-12
                  input#anotherThing.form-control(type="text")
          div.row
            div.col-md-6
              div.form-group
                div.col-md-12
                  label.control-label(for="status") Status
                div.col-md-12
                  select#status.form-control.c-select()
                    option(selected) Honeydoo Status
                    option(value="one")
                    option(value="two")
                    option(value="three")
            div.col-md-6
              div.form-group
                div.col-md-12
                  label.control-label(for="owner") Owner
                div.col-md-12
                  select#owner.form-control.c-select()
                    option(selected) Owner
                    option(value="his")
                    option(value="hers")
            div.col-md-10.col-md-offset-1
              div.form-group
                label.control-label(for="note") Add Note
                textarea#note.form-control(rows="3")
      div.modal-footer
        button.btn.btn-default(type="button", data-dismiss="modal") Cancel
        button.btn.btn-primary(type="button") Submit